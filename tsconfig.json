{
  "compilerOptions": {
    "outDir": "./dist/",
    "target": "es2017",
    "jsx": "react-jsx",
    "module": "commonjs",
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "esModuleInterop": true,
    "types": ["node"],
    "paths": {
      "@apis/*": ["apis/*"],
      "@assets/*": ["assets/*"],
      "@components/*": ["components/*"],
      "@hooks/*": ["hooks/*"],
      "@mocks/*": ["mocks/*"],
      "@pages/*": ["pages/*"],
      "@react-three/fiber": ["./node_modules/@react-three/fiber"],
      "@react-three/drei": ["./node_modules/@react-three/drei"],
      "@/*": ["*"]
    }
  },
  "include": ["src/**/*"]
}
