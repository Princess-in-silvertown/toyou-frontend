{
  "compilerOptions": {
    "outDir": "./dist/",
    "target": "es2017",
    "jsx": "react-jsx",
    "module": "commonjs",
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "types": ["node"],
    "paths": {
      "@assets/*": ["assets/*"],
      "@react-three/fiber": ["./node_modules/@react-three/fiber"],
      "@react-three/drei": ["./node_modules/@react-three/drei"]
    }
  },
  "include": ["src/**/*"]
}
